<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/material-design-iconic-font@2.2.0/dist/css/material-design-iconic-font.min.css"
    />
    <title>Reset Password</title>
  </head>
  <body>
    <%- include('../partials/header.ejs') %>

    <section class="change-password forgot-password">
      <div class="container">
        <div class="change-password-content">
          <div class="user-status">
            <% if(user) { %>
            <div class="status-badge success">
              <i class="zmdi zmdi-check-circle"></i>
              <span>You are logged in</span>
            </div>
            <% } else { %>
            <div class="status-badge warning">
              <i class="zmdi zmdi-alert-circle"></i>
              <span>You are not logged in</span>
            </div>
            <% } %>
          </div>

          <% if(formSubmitted) { %>
          <p>
            If the email that you have given us is correct, we have sent email
            to reset password to your email.
          </p>
          <% } else { %>
          <div class="change-password-form">
            <h1 class="form-title">Enter Your Register Email</h1>
            <form action="/reset-password" method="post">
              <div class="form-group">
                <label for="email"></label>
                <div class="input-wrapper">
                  <i class="zmdi zmdi-email prefix-icon"></i>
                  <input
                    type="email"
                    name="email"
                    id="email"
                    placeholder="Enter your Register Email"
                    autocomplete="false"
                    tabindex="1"
                  />
                </div>
              </div>

              <% if ((errors && errors.length > 0)) { %>
              <div class="error-container">
                <% errors.forEach((error) => { %>
                <p class="flash-error"><%= error %></p>
                <% }); %>
              </div>
              <% } %>

              <div class="form-group form-button">
                <button type="submit" class="form-submit">Submit</button>
              </div>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </section>

    <%- include('../partials/footer.ejs') %>
  </body>
</html>